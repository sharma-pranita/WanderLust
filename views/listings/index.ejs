<% layout("/layouts/boilerplate")%>
<body>
    <h1>All Listings</h1>
    <!-- <form action="/listings/new" method="GET">
        <button>Create New Listing</button>
    </form> -->


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
    <% for(let listing of allListings){%>
        
        <div class="card col">
            <a href="/listings/<%= listing._id %>">
             
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height:20rem">
                   
                  
            
           
            
            <div class="card-img-overlay">
             <i class="ri-vip-crown-line" style="color: rgba(237,196,110,1); font-size: 1.4rem;"></i>
            </div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b>
                <br>
                <p class="card-price">&#8377;<%=listing.price.toLocaleString("en-IN")%>/night</p>
              </p>
            </div>
        </a>
        </div>
   
    <%}%>
</div>

  

 
</body>



